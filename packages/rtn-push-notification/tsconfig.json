{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "./lib/",
		"target": "esnext",
		"noImplicitAny": true,
		"lib": ["esnext"],
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": false,
		"declaration": true,
		"typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true
	}
}
